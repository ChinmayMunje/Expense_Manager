<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg"
    tools:context=".registration">


        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registration"
            android:textSize="30dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="50dp"/>

        <TextView
            android:id="@+id/move1"
            android:layout_below="@id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Full Name"
            android:textAllCaps="true"
            android:fontFamily="sans-serif-light"
            android:textSize="15dp"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/et_move1"
            android:layout_below="@id/move1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/et_bg"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-light"
            android:padding="15dp"
            android:paddingRight="15dp"/>

        <TextView
            android:id="@+id/move2"
            android:layout_below="@id/et_move1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Email ID"
            android:textAllCaps="true"
            android:fontFamily="sans-serif-light"
            android:textSize="15dp"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/et_move2"
            android:layout_below="@id/move2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/et_bg"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-light"
            android:padding="15dp"
            android:paddingRight="15dp"/>

        <TextView
            android:id="@+id/move3"
            android:layout_below="@id/et_move2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Password"
            android:textAllCaps="true"
            android:fontFamily="sans-serif-light"
            android:textSize="15dp"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/et_move3"
            android:layout_below="@id/move3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/et_bg"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-light"
            android:padding="15dp"
            android:paddingRight="15dp"/>

        <TextView
            android:id="@+id/move4"
            android:layout_below="@id/et_move3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Confirm Password"
            android:textAllCaps="true"
            android:fontFamily="sans-serif-light"
            android:textSize="15dp"
            android:textColor="@color/white"/>

<!--        <EditText-->
<!--            android:id="@+id/et_move4"-->
<!--            android:layout_below="@id/move4"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="40dp"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:background="@drawable/et_bg"-->
<!--            android:textSize="15sp"-->
<!--            android:textColor="@color/white"-->
<!--            android:fontFamily="sans-serif-light"-->
<!--            android:padding="15dp"-->
<!--            android:paddingRight="15dp"/>-->

        <Button
            android:id="@+id/btn_register"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@id/et_move3"
            android:text="Register"
            android:textSize="20dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/btn_bg"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login"
        android:layout_below="@+id/btn_register"
        android:text="Already register ? Login here"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>



</RelativeLayout>